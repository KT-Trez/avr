{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "files": {
    "include": [
      "*.json",
      "**/*.ts",
      "**/*.tsx",
      "**/*.json"
    ],
    "ignore": [
      "node_modules",
      "package*.json"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf",
    "lineWidth": 120
  },
  "javascript": {
    "formatter": {
      "arrowParentheses": "asNeeded",
      "quoteStyle": "single"
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "complexity": {
        "all": true
      },
      "correctness": {
        "all": true,
        "noNodejsModules": "off",
        "noUndeclaredDependencies": "off"
      },
      "performance": {
        "all": true
      },
      "recommended": true,
      "security": {
        "all": true
      },
      "style": {
        "all": true,
        "useFilenamingConvention": "off",
        "useNamingConvention": "off"
      },
      "suspicious": {
        "all": true
      }
    }
  },
  "organizeImports": {
    "enabled": true
  }
}
